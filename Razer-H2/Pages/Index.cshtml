@page "{handler?}/{id?}"

@model IndexModel
@{
    ViewData["Title"] = "Todo Page";
}


<div class="text-center">
    <h1 class="display-1"> Todos</h1>
    <form method="post">
        <div class="ToDos">
            <div class="container">
                <div class="row">
                    @foreach (Modul.ToDo item in Model.ToDos)
                    {
                        <div class="form-group">
                            <div class="col-7">
                                <a href="#">ToDo: @item.TaskDescription</a>
                            </div>
                            <div class="col-1">
                                <input value="@item.ID" name="IsChecked" class="form-check-input" type="checkbox" />
                            </div>
                            <div class="col-2">
                                <a asp-page-handler="/edit" asp-route-id="@item.ID" style="line-height: 2;" type="button" class="btn btn-primary">Edit</a>
                            </div>
                            <div class="col-1">
                                <button class="btn btn-danger" asp-page-handler="delete" asp-route-id="@item.ID">Delete</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="bottom">
            <div class="row">
                <div class="bottom-btn col-lg-3">
                    <button class="btn btn-lg btn-primary" type="button" data-toggle="modal" data-target="#addModal">Create new</button>
                </div>
                <div class="bottom-btn col-lg-2">
                    <button class="btn btn-lg btn-primary" asp-page-handler="IsChecked" type="submit">Save</button>
                </div>
                <div class="bottom-btn col-2">
                    <button class="btn btn-lg btn-primary" asp-page-handler="load" type="submit">Load</button>
                </div>
            </div>
        </div>
    </form>




    <!--Modal add-->
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form method="post" asp-page-handler="add">
                    <div class="modal-body">
                        <h1>Create a Todo</h1>
                        <div class="editModal col-6">
                            <div class="form-group">
                                <label>Priority:</label>
                                @foreach (object item in Model.PriorityList)
                                {
                                    <div class="form-check">
                                        @if (item.ToString() == "Normal")
                                        {
                                            <input type="radio" name="RadioPriority" value="@item.ToString()" checked /> @item.ToString() <br />
                                        }
                                        else
                                        {
                                            <input type="radio" name="RadioPriority" value="@item.ToString()" /> @item.ToString() <br />
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="editModal col-6">
                            <div class="form-group">
                                <label>Description: </label>
                                <input type="text" asp-for="TextDescrip" class="form-control" id="TextDescrip" placeholder="Write description" />
                                <span asp-validation-for="TextDescrip"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>