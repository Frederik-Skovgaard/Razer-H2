@page "{handler?}/{id?}"

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post"><button class="btn btn-lg btn-primary" style="margin-bottom: 1rem;">Do it...</button></form>



    <div class="ToDos">
        @foreach (Modul.ToDo dos in Model.doRepository.ToDos)
        {
            <div class="form-group">
                <div class="row">

                    <div class="col-lg-9">
                        <form asp-page-handler="view" asp-route-id="2" method="post">
                            <a href="#">ToDo: @dos.TaskDescription</a>
                        </form>
                    </div>

                    <div class="col-lg-0">
                        <form>
                            <input value="@dos.IsCompleted" class="form-check-input" type="checkbox" />
                        </form>
                    </div>

                    <div class="col-lg-0">
                        <button class="btn btn-primary" data-toggle="modal" data-target="#editModal" data-whatever="@dos.ID" >Edit</button>
                    </div>

                    <div class="col-lg-0">
                        <form asp-page-handler="delete" asp-route-id="@dos.ID" method="post">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>

    <!--Modal edit-->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit ToDo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"&times;></span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</div>
