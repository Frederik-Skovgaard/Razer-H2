@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post"><button>Do it...</button></form>
    

    @foreach (Modul.ToDo dos in Model.doRepository.ToDos)
    {
        <form>
            <a class="" href="#">ToDo: @dos.TaskDescription</a>
            <input value="@dos.IsCompleted" type="checkbox" />
            <button class="btn btn-primary">Edit</button>
            <button class="btn btn-danger">Delete</button>
        </form>
    }
</div>
